@{
    ViewBag.Title = "Demo 1";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 pb-5">

            <form action="@Url.Action("SubmitResult","Demo1")" method="post">
                <div class="card border-axa-blue rounded-0">
                    <div class="card-header p-0">
                        <div class="border-primary text-axa-blue text-center py-2">
                            <h3><i class="fa fa-envelope"></i> Application Form</h3>
                        </div>
                    </div>
                    <div class="card-body p-3">

                        <!--Body-->
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-user text-axa-blue"></i></div>
                                </div>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-envelope text-axa-blue"></i></div>
                                </div>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-phone text-axa-blue"></i></div>
                                </div>
                                <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Mobile Number (09xxxxxxxxxx)" required pattern="09[0-9]{9}">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-suitcase text-axa-blue"></i></div>
                                </div>
                                <input type="text" class="form-control" id="position" name="position" placeholder="Position Applied" required>
                            </div>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Submit" class="btn btn-primary bg-axa-blue btn-block rounded-0 py-2">
                        </div>
                    </div>

                </div>
            </form>

        </div>
    </div>
</div>

